  }
  
  .footer-bottom a {
    color: var(--accent-color);
    text-decoration: none;
  }
  
  .footer-bottom a:hover {
    text-decoration: underline;
  }
  
  .social-links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
  }
  
  .social-links a {
    font-size: 1.2rem;
    text-decoration: none;
    transition: transform 0.3s ease;
  }
  
  .social-links a:hover {
    transform: scale(1.2);
  }
  
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
