<header>
  <div class="container">
    <div class="header-content">
      <div class="logo-section">
        <div class="logo-container">
          <div class="logo-icon">
            <img src="/images/welfare-trust-logo.png" alt="Chinnayan Welfare and Charitable Trust Logo" class="logo-image" />
            <div class="logo-accent"></div>
          </div>
        </div>
        <div class="logo-text">
          <h1>Chinnayan Welfare and Charitable Trust</h1>
          <p>Empowering Communities Together</p>
        </div>
      </div>
      
      <nav class="main-nav">
        <a href="/" class="nav-link" data-page="home">Home</a>
        <a href="/about" class="nav-link" data-page="about">About</a>
        <a href="/donate" class="nav-link donate-btn" data-page="donate">Donate</a>
        <a href="/gallery" class="nav-link" data-page="gallery">Gallery</a>
      </nav>
      
      <div class="header-cta">
        <a href="/volunteer" class="volunteer-btn">Volunteer</a>
      </div>
    </div>
  </div>
</header>

<script>
  // Add active state to current page navigation
  document.addEventListener('DOMContentLoaded', function() {
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('.nav-link');
    
    navLinks.forEach(link => {
      const href = link.getAttribute('href');
      
      // Check if current page matches the link
      if (
        (currentPath === '/' && href === '/') ||
        (currentPath.startsWith(href) && href !== '/')
      ) {
        link.classList.add('active');
      }
    });
  });
</script>

<style>
  header {
    background: var(--white);
    border-bottom: 1px solid var(--neutral-medium);
    box-shadow: 0 2px 10px rgba(44, 122, 123, 0.1);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 0;
  }
  
  .logo-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .logo-container {
    position: relative;
  }
  
  .logo-icon {
    width: 45px;
    height: 45px;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    box-shadow: 0 3px 8px rgba(44, 122, 123, 0.25);
  }
  
  .logo-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    position: relative;
    z-index: 2;
  }
  
  .logo-accent {
    position: absolute;
    top: -2px;
    right: -2px;
    width: 16px;
    height: 16px;
    background: var(--secondary-color);
    border-radius: 50%;
    border: 2px solid var(--white);
  }
  
  .logo-text h1 {
    margin: 0;
    font-size: 1.35rem;
    color: var(--primary-color);
    font-weight: 700;
    letter-spacing: -0.3px;
    line-height: 1.2;
  }
  
  .logo-text p {
    margin: 0;
    font-size: 0.9rem;
    color: var(--accent-color);
    font-weight: 500;
    letter-spacing: 0.3px;
  }
  
  .main-nav {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }
  
  .nav-link {
    color: var(--neutral-dark);
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    padding: 0.75rem 1.25rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .nav-link:hover {
    color: var(--primary-color);
    background-color: var(--neutral-light);
    transform: translateY(-1px);
  }
  
  .nav-link.active {
    color: var(--primary-color);
    background-color: var(--neutral-light);
    font-weight: 600;
    position: relative;
  }
  
  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 3px;
    background: var(--primary-color);
    border-radius: 2px;
  }
  
  .nav-link.donate-btn {
    background: linear-gradient(135deg, var(--secondary-color), #e53e3e);
    color: var(--white);
    font-weight: 600;
    margin-left: 0.5rem;
    box-shadow: 0 2px 8px rgba(245, 101, 101, 0.3);
  }
  
  .nav-link.donate-btn:hover {
    background: linear-gradient(135deg, #e53e3e, #c53030);
    color: var(--white);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(245, 101, 101, 0.4);
  }
  
  .nav-link.donate-btn.active {
    background: linear-gradient(135deg, #c53030, #9c2929);
    color: var(--white);
    transform: translateY(-1px);
  }
  
  .nav-link.donate-btn.active::after {
    background: var(--white);
  }
  
  .header-cta {
    display: flex;
    align-items: center;
  }
  
  .volunteer-btn {
    padding: 0.75rem 1.5rem;
    background: transparent;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  
  .volunteer-btn:hover {
    background: var(--primary-color);
    color: var(--white);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(44, 122, 123, 0.3);
  }
  
  @media (max-width: 1024px) {
    .header-cta {
      display: none;
    }
  }
  
  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1.5rem;
      padding: 1rem 0;
    }
    
    .logo-icon {
      width: 40px;
      height: 40px;
    }
    
    .logo-image {
      width: 100%;
      height: 100%;
    }
    
    .logo-accent {
      width: 14px;
      height: 14px;
      top: -1px;
      right: -1px;
    }
    
    .logo-text h1 {
      font-size: 1.1rem;
    }
    
    .logo-text p {
      font-size: 0.8rem;
    }
    
    .main-nav {
      gap: 0.25rem;
      flex-wrap: wrap;
      justify-content: center;
    }
    
    .nav-link {
      font-size: 0.9rem;
      padding: 0.6rem 1rem;
    }
    
    .nav-link.donate-btn {
      margin-left: 0;
      order: -1;
      margin-bottom: 0.5rem;
    }
  }
</style>
