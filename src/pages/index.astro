---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welfare Trust - Empowering Communities Through Compassionate Action</title>
    <meta name="description" content="Join Welfare Trust in creating lasting positive change through community support, education, and sustainable development programs." />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <Header />
    
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1>Creating Hope, Building Futures</h1>
          <p class="hero-subtitle">Empowering communities through compassionate action, sustainable support, and meaningful partnerships to create lasting positive change in the lives of those who need it most.</p>
          <div class="hero-actions">
            <a href="/donate" class="btn btn-primary">Make a Difference</a>
            <a href="/about" class="btn btn-secondary">Learn More</a>
          </div>
        </div>
        <div class="hero-image">
          <div class="hero-placeholder">
            <span>ü§ù</span>
            <p>Together We Rise</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Impact Section -->
    <section class="section">
      <div class="container">
        <h2 class="text-center">Our Impact in Numbers</h2>
        <div class="impact-grid">
          <div class="impact-card">
            <div class="impact-number">15,000+</div>
            <div class="impact-label">Lives Touched</div>
            <p>Families and individuals supported through our various programs</p>
          </div>
          <div class="impact-card">
            <div class="impact-number">50+</div>
            <div class="impact-label">Communities Served</div>
            <p>Local communities across the region benefiting from our initiatives</p>
          </div>
          <div class="impact-card">
            <div class="impact-number">200+</div>
            <div class="impact-label">Volunteers</div>
            <p>Dedicated volunteers working tirelessly to make a difference</p>
          </div>
          <div class="impact-card">
            <div class="impact-number">$2.5M+</div>
            <div class="impact-label">Funds Distributed</div>
            <p>Direct aid and program funding reaching those in need</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Programs Section -->
    <section class="section section-alt">
      <div class="container">
        <h2 class="text-center">Our Key Programs</h2>
        <div class="programs-grid">
          <div class="program-card">
            <div class="program-icon">üéì</div>
            <h3>Education Support</h3>
            <p>Providing scholarships, school supplies, and educational resources to help children and adults access quality education and build brighter futures.</p>
          </div>
          <div class="program-card">
            <div class="program-icon">üè†</div>
            <h3>Housing Assistance</h3>
            <p>Supporting families with emergency housing, home repairs, and transitional housing programs to ensure everyone has a safe place to call home.</p>
          </div>
          <div class="program-card">
            <div class="program-icon">üçΩÔ∏è</div>
            <h3>Food Security</h3>
            <p>Operating food banks, community kitchens, and nutrition programs to address hunger and promote healthy eating in underserved communities.</p>
          </div>
          <div class="program-card">
            <div class="program-icon">üíº</div>
            <h3>Job Training</h3>
            <p>Offering skills development, job placement services, and entrepreneurship programs to help individuals achieve economic independence.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="section cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Ready to Make a Difference?</h2>
          <p>Your support can transform lives and strengthen communities. Whether through donations, volunteering, or spreading the word, every action counts in our mission to create positive change.</p>
          <div class="cta-actions">
            <a href="/donate" class="btn btn-primary">Donate Today</a>
            <a href="/volunteer" class="btn btn-secondary">Volunteer With Us</a>
          </div>
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>

<style>
  .hero {
    background: linear-gradient(135deg, var(--neutral-light) 0%, var(--white) 100%);
    padding: 4rem 0;
    min-height: 70vh;
    display: flex;
    align-items: center;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-content h1 {
    font-size: 3.5rem;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--primary-color);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--neutral-dark);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-placeholder {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: var(--white);
    box-shadow: var(--shadow-lg);
  }

  .hero-placeholder span {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .hero-placeholder p {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
  }

  .impact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .impact-card {
    text-align: center;
    padding: 2rem 1rem;
    background: var(--white);
    border-radius: 12px;
    box-shadow: var(--shadow);
    transition: transform 0.3s ease;
  }

  .impact-card:hover {
    transform: translateY(-5px);
  }

  .impact-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--secondary-color);
    margin-bottom: 0.5rem;
  }

  .impact-label {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .programs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .program-card {
    background: var(--white);
    padding: 2rem;
    border-radius: 12px;
    box-shadow: var(--shadow);
    text-align: center;
    transition: transform 0.3s ease;
  }

  .program-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }

  .program-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .program-card h3 {
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
    color: var(--white);
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-content h2 {
    color: var(--white);
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.95;
  }

  .cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-actions .btn {
    background-color: var(--white);
    color: var(--primary-color);
  }

  .cta-actions .btn:hover {
    background-color: var(--neutral-light);
    transform: translateY(-2px);
  }

  .cta-actions .btn-secondary {
    background-color: transparent;
    color: var(--white);
    border: 2px solid var(--white);
  }

  .cta-actions .btn-secondary:hover {
    background-color: var(--white);
    color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .hero .container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-content h1 {
      font-size: 2.5rem;
    }

    .hero-placeholder {
      width: 250px;
      height: 250px;
    }

    .hero-placeholder span {
      font-size: 3rem;
    }

    .hero-placeholder p {
      font-size: 1.25rem;
    }

    .hero-actions,
    .cta-actions {
      flex-direction: column;
      align-items: center;
    }

    .impact-grid,
    .programs-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
